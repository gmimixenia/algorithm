<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/screen"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/find_password" >

    <EditText
        android:id="@+id/password_s"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_marginStart="30dp"
        android:layout_centerVertical="true"
        android:background="@drawable/edit_text_design"
        android:ems="10"
        android:imeOptions ="actionNone"
        android:singleLine="true"
        android:maxLines="1"
        android:textColor="#FFFFFF"
        android:textSize="32sp" >

        <requestFocus />
    </EditText>

    <ImageButton
        android:id="@+id/back_f"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentTop="true"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="230dp"
        android:layout_marginTop="19dp"
        android:background="@android:color/transparent"
        android:src="@drawable/back_button" />

    <ImageButton
        android:id="@+id/enter_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:scaleType="fitXY"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="17dp"
        android:layout_marginStart="230dp"
        android:background="@android:color/transparent"
        android:src="@drawable/enter_button" />

    <ImageButton
        android:id="@+id/data_button"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_alignLeft="@+id/password_s"
        android:layout_below="@+id/back_f"
        android:layout_marginTop="17dp"
        android:background="@android:color/transparent"
        android:scaleType="fitXY"
        android:src="@drawable/data_button" />

</RelativeLayout>
